{
  "buildCommand": "if [ -d frontend ]; then cd frontend && npm install && npm run build; else npm install && npm run build; fi",
  "outputDirectory": "frontend/dist",
  "installCommand": "if [ -d frontend ]; then cd frontend && npm install; else npm install; fi",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
